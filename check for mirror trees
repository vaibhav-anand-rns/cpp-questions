bool areMirror(TreeNode* root1, TreeNode* root2){
    
    if(root1 == nullptr && root2 == nullptr){
        return true;
    }
    if(root1 == nullptr || root2 == nullptr){
        return false;
    }
    return (root1->val == root2->val) && areMirror(root1->left == root2->right) && areMirror(root1->right == root2->left);
}
