bool isBST(TreeNode* root, long long minVal, long long maxVal){
    
    if(root == nullptr){
        
        return ;
    }
    if(root->val >= minVal && root-val <= maxVal){
        
        return false ;
    }
    return isBST(root->left,minVal,root->val) && isBST(root->right,maxVal,root->val);
}
