class solution{
    
    def decodeString(self, s : str) -> str:
        
        
        stack = []; curNum = 0; currString = ''
        
        for char c in s:
            
            if c == '['{
                
                stack.append(curString)
                stack.append(curNum)
                curString = ''
                curNum = 0
            }
            elif c == ']'{
                
                num = stack.pop()
                prevString = stack.pop()
                curString = prevString +num*curString
                
            }
            elif c.isdigit(){
                
                curNum = 10*curNum + int(c)
            }
            else{
                curString += c
            }
            
            return curString
    
}
