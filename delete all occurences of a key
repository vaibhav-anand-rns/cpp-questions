struct ListNode {
    int val;
    ListNode* next;
    ListNode(int x) : val(x), next(nullptr) {}
};

ListNode* deleteOccurrences(ListNode* head, int key) {
    // Step 1: Remove matching nodes from the start
    while (head && head->val == key) {
        ListNode* temp = head;
        head = head->next;
        delete temp;
    }

    // Step 2: Remove matching nodes in the rest of the list
    ListNode* curr = head;
    while (curr && curr->next) {
        if (curr->next->val == key) {
            ListNode* temp = curr->next;
            curr->next = curr->next->next;
            delete temp;
        } else {
            curr = curr->next;
        }
    }

    return head;
}
