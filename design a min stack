#include <iostream>
#include <stack>
using namespace std;

class MinStack {
    stack<int> mainStack;
    stack<int> minStack;

public:
    void push(int x) {
        mainStack.push(x);

        // If minStack is empty or x is <= current min, push to minStack
        if (minStack.empty() || x <= minStack.top()) {
            minStack.push(x);
        }
    }

    void pop() {
        if (mainStack.empty()) return;

        // If popping the current min, pop from minStack too
        if (mainStack.top() == minStack.top()) {
            minStack.pop();
        }
        mainStack.pop();
    }

    int top() {
        if (mainStack.empty()) return -1;
        return mainStack.top();
    }

    int getMin() {
        if (minStack.empty()) return -1;
        return minStack.top();
    }
};
