struct node{
    int data;
    node*next;
}
//insert at the beggining

void insertAtHead(){
    
    Node*newnode = new Node;
    newnode -> next = head;
    head = newnode;
    
}
//insert at the end

void insertAtTail(){
    
    Node*newnode = new Node;
    if(head == nullptr){
        
        head = newnode;
        return;
    }
    
    node*temp = head;
    while(temp->next != nullptr){
        
        temp = temp->next;
        
    }
    temp->next = newnode;
    
    
    
}

void deleteNode(){
    
    if(head == nullptr){
        
        cout << "the linked list is empty";
    }
    if(head->data == val){
        
        node* todelete = head;
        head = head->next;
        delete todelete;
        return;
    }
    
    node*temp = head;
    while(temp -> next != nullptr && temp->next->data != val){
        
        temp = temp->next;
    }
    node*todelete = temp_>next;
    delete todelete;
    
    
}
