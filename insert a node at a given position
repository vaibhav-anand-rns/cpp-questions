#include <iostream>
#include <list>
using namespace std;

void insertAtPosition(list<int>& myList, int val, int pos) {
    if (pos < 1 || pos > myList.size() + 1) {
        cout << "Position out of bounds." << endl;
        return;
    }

    auto it = myList.begin();
    advance(it, pos - 1);  // Move iterator to the (pos-1)th place

    myList.insert(it, val);
}
