int minDepth(TreeNode* root){
    
    if(root == null){
        
        return 0 ;
    }
    if(!root->left){
        
        return 1 + minDepth(root->right);
    }
    if(!root->right){
        return 1 + minDepth(root->left);
    }
    return 1 + std::min(minDepth(root->left),minDepth(root->right));
}
