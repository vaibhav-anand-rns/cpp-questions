#include <iostream>
#include <stack>
#include <vector>
using namespace std;

void findNextGreaterElement(int arr[], int n) {
    // Create a stack to store indices
    stack<int> s;
    
    // Create a vector to store results
    vector<int> result(n);
    
    // Initialize all elements as -1 (no greater element)
    for(int i = 0; i < n; i++) {
        result[i] = -1;
    }
    
    // Traverse the array from right to left
    for(int i = n-1; i >= 0; i--) {
        // Pop elements from stack while they are smaller than current element
        while(!s.empty() && arr[s.top()] <= arr[i]) {
            s.pop();
        }
        
        // If stack is not empty, top element is next greater
        if(!s.empty()) {
            result[i] = arr[s.top()];
        }
        
        // Push current index onto stack
        s.push(i);
    }
    
    // Print the results
    cout << "Next greater elements are:\n";
    for(int i = 0; i < n; i++) {
        cout << arr[i] << " -> " << result[i] << endl;
    }
}

