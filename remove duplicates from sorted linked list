Node* removeDuplicates(Node* head){
    
    if(!head || !head->next){
        
        return head ;
    }
    
    Node*curr = head;
    
    while(curr & curr->next){
        
        if(curr->data == curr->next->data){
            
            Node*duplicate = curr->next;
            delete duplicate;
        }
        else{
            
            curr = curr->next ;
        }
    }
    return head ;
}
