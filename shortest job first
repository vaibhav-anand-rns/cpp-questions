

#include <bits/stdc++.h>
using namespace std;

struct Process {
    int id, at, bt, ct, tat, wt;
};

int main() {
    int n;
    cin >> n;
    vector<Process> p(n);
    for(int i=0;i<n;i++) {
        p[i].id=i+1;
        cin >> p[i].at >> p[i].bt;
    }

    int completed = 0, time = 0;
    vector<bool> isDone(n,false);

    while(completed < n) {
        int idx = -1;
        int minBT = INT_MAX;
        for(int i=0;i<n;i++) {
            if(p[i].at <= time && !isDone[i]) {
                if(p[i].bt < minBT) {
                    minBT = p[i].bt;
                    idx = i;
                }
            }
        }

        if(idx != -1) {
            time += p[idx].bt;
            p[idx].ct = time;
            p[idx].tat = p[idx].ct - p[idx].at;
            p[idx].wt = p[idx].tat - p[idx].bt;
            isDone[idx] = true;
            completed++;
        } else {
            time++; // no process is ready, increment time
        }
    }

    double totalTAT=0, totalWT=0;
    for(auto &pr : p) {
        totalTAT += pr.tat;
        totalWT += pr.wt;
        cout << "P" << pr.id << ": CT=" << pr.ct << " TAT=" << pr.tat << " WT=" << pr.wt << endl;
    }
    cout << "Average TAT=" << totalTAT/n << " Average WT=" << totalWT/n << endl;
}
