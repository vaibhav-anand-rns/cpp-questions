class solution{
    public:
          
          vector<int>ans(prices.size(),0);
          stack<int>s;
          
          for(int i = 0; i<prices.size();i++){
              
              while(s.size() > 0 && prices[s.top()] <= prices[i]){
                  
                  s.pop();
              }
              if(s.empty()){
                  
                  ans[i] = i+1;
              }
              else{
                  
                  ans[i] = i - s.top();
              }
              s.push(i);
          }
          return 0 ;
}
