#include <iostream>
#include <stack>
#include <string>
using namespace std;

bool isValid(string s) {
    stack<char> st;

    for (char ch : s) {
        // Push opening brackets
        if (ch == '(' || ch == '{' || ch == '[') {
            st.push(ch);
        }
        // Handle closing brackets
        else {
            if (st.empty()) return false; // No matching opening
            char top = st.top();
            st.pop();

            // Check for matching pair
            if ((ch == ')' && top != '(') ||
                (ch == '}' && top != '{') ||
                (ch == ']' && top != '[')) {
                return false;
            }
        }
    }

    // If stack is empty at end, it's valid
    return st.empty();
}

int main() {
    string input;
    cout << "Enter a string of brackets: ";
    cin >> input;

    if (isValid(input))
        cout << "Valid parentheses!" << endl;
    else
        cout << "Invalid parentheses!" << endl;

    return 0;
}
